{
  "name": "@mgcrea/create-app",
  "version": "0.8.2",
  "description": "",
  "author": "Olivier Louvignes <olivier@mgcrea.io>",
  "repository": "github:mgcrea/create-app",
  "license": "MIT",
  "type": "module",
  "publishConfig": {
    "access": "public"
  },
  "exports": {
    ".": {
      "require": "./dist/index.cjs",
      "import": "./dist/index.js",
      "types": "./dist/index.d.ts"
    }
  },
  "main": "./dist/index.cjs",
  "module": "./dist/index.js",
  "types": "./dist/index.d.ts",
  "bin": {
    "create-app": "./dist/index.js"
  },
  "scripts": {
    "start": "FORCE_COLOR=1 tsx src/index.ts",
    "dev": "FORCE_COLOR=1 tsx --inspect --watch --no-warnings src/index.ts",
    "build": "rimraf dist/*; tsup src/index.ts --format cjs,esm --sourcemap --dts",
    "preview": "node --experimental-specifier-resolution=node --no-warnings dist/index.js",
    "setup": "scripts/runTemplates.sh 'pnpm install'",
    "postbuild": "shebang-trim dist/index.js dist/index.cjs",
    "prettify": "prettier --write src/ templates/",
    "lint": "scripts/runTemplates.sh 'npm run lint'",
    "prettycheck": "scripts/runTemplates.sh 'npm run prettycheck'",
    "typecheck": "scripts/runTemplates.sh 'npm run typecheck'",
    "test": "npm run lint && npm run prettycheck && npm run typecheck",
    "prepublishOnly": "npm run build"
  },
  "keywords": [],
  "devDependencies": {
    "@mgcrea/eslint-config-node": "^0.6.1",
    "@tsconfig/esm": "^1.0.3",
    "@tsconfig/node-lts": "^18.12.2",
    "@tsconfig/strictest": "^2.0.1",
    "@types/minimist": "^1.2.2",
    "@types/node": "^18.16.17",
    "@types/prompts": "^2.4.4",
    "eslint": "^8.42.0",
    "prettier": "^2.8.8",
    "prettier-plugin-organize-imports": "^3.2.2",
    "release-it": "^15.11.0",
    "rimraf": "^5.0.1",
    "shebang-trim": "^1.2.0",
    "tsup": "^6.7.0",
    "tsx": "^3.12.7",
    "typescript": "^5.1.3"
  },
  "dependencies": {
    "kolorist": "^1.8.0",
    "minimist": "^1.2.8",
    "prompts": "^2.4.2"
  }
}
