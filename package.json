{
  "name": "@mgcrea/create-app",
  "version": "0.8.1",
  "description": "",
  "author": "Olivier Louvignes <olivier@mgcrea.io>",
  "repository": "github:mgcrea/create-app",
  "license": "MIT",
  "type": "module",
  "publishConfig": {
    "access": "public"
  },
  "exports": {
    ".": {
      "require": "./dist/index.cjs",
      "import": "./dist/index.js",
      "types": "./dist/index.d.ts"
    }
  },
  "main": "./dist/index.cjs",
  "module": "./dist/index.js",
  "types": "./dist/index.d.ts",
  "bin": {
    "create-app": "./dist/index.js"
  },
  "scripts": {
    "start": "FORCE_COLOR=1 tsx src/index.ts",
    "dev": "FORCE_COLOR=1 tsx --inspect --watch --no-warnings src/index.ts",
    "build": "rimraf dist/*; tsup src/index.ts --format cjs,esm --sourcemap --dts",
    "preview": "node --experimental-specifier-resolution=node --no-warnings dist/index.js",
    "postbuild": "shebang-trim dist/index.js dist/index.cjs",
    "prettify": "prettier --write src/ templates/",
    "lint": "eslint src/ && scripts/runTemplates.sh 'npm run lint'",
    "prettycheck": "prettier --check src/ && scripts/runTemplates.sh 'npm run prettycheck'",
    "typecheck": "tsc --noEmit && scripts/runTemplates.sh 'npm run typecheck'",
    "test": "npm run lint && npm run prettycheck && npm run typecheck",
    "clean": "scripts/runTemplates.sh 'rm -rf node_modules pnpm-lock.yaml; pnpm i'",
    "prepublishOnly": "npm run build"
  },
  "keywords": [],
  "devDependencies": {
    "@mgcrea/eslint-config-node": "^0.4.3",
    "@mgcrea/eslint-config-react": "^0.4.3",
    "@mgcrea/eslint-config-react-native": "^0.4.3",
    "@tsconfig/esm": "^1.0.3",
    "@tsconfig/node-lts": "^18.12.2",
    "@tsconfig/strictest": "^2.0.1",
    "@types/minimist": "^1.2.2",
    "@types/node": "^18.16.9",
    "@types/prompts": "^2.4.4",
    "prettier": "^2.8.8",
    "prettier-plugin-organize-imports": "^3.2.2",
    "release-it": "^15.10.3",
    "rimraf": "^5.0.0",
    "shebang-trim": "^1.2.0",
    "tsup": "^6.7.0",
    "tsx": "^3.12.7",
    "typescript": "^5.0.4"
  },
  "dependencies": {
    "kolorist": "^1.8.0",
    "minimist": "^1.2.8",
    "prompts": "^2.4.2"
  }
}
