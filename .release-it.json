{
  "plugins": {
    "@release-it-plugins/workspaces": {
      "workspaces": ["packages/*"]
    }
  },
  "npm": false,
  "git": {
    "commitMessage": "chore(release): cut the v${version} release",
    "tagAnnotation": "v${version} release"
  },
  "github": {
    "release": true,
    "releaseName": "v${version}"
  }
}
