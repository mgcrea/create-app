{
  "name": "create-hono-bun-ts",
  "version": "0.0.0",
  "description": "",
  "private": true,
  "author": "",
  "license": "MIT",
  "type": "module",
  "exports": {
    ".": {
      "import": "./dist/index.js"
    }
  },
  "main": "./dist/index.js",
  "types": "./dist/index.d.ts",
  "files": [
    "dist"
  ],
  "scripts": {
    "start": "bun run src/index.ts",
    "dev": "bun run --hot src/index.ts",
    "build": "bun build src/index.ts --target node --outdir dist/",
    "compile": "bun build src/index.ts --compile --outfile dist/app",
    "preview": "bun dist/index.js",
    "prettify": "prettier --write src/ test/",
    "lint": "eslint src/ test/",
    "prettycheck": "prettier --check src/ test/",
    "typecheck": "tsc --noEmit",
    "spec": "bun test --preload test/setup.ts",
    "watch": "bun run spec --watch",
    "test": "bun run lint && bun run prettycheck && bun run typecheck && bun run spec",
    "prepublishOnly": "bun run build"
  },
  "dependencies": {
    "@hono/zod-validator": "^0.4.1",
    "hono": "^4.6.9",
    "zod": "^3.23.8"
  },
  "devDependencies": {
    "@mgcrea/eslint-config-node": "^0.12.15",
    "@tsconfig/node-lts": "^22.0.0",
    "@tsconfig/strictest": "^2.0.5",
    "@types/node": "^22.9.0",
    "bun-types": "^1.1.34",
    "eslint": "^9.14.0",
    "prettier-plugin-organize-imports": "^4.1.0",
    "prettier": "^3.3.3",
    "typescript": "^5.6.3"
  }
}
